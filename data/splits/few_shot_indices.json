        "5%": {"n_samples": 1112, "n_tumor": 693, "n_normal": 419, "seeds": [42, 123, 456, 789, 1011]},
        "10%": {"n_samples": 2224, "n_tumor": 1386, "n_normal": 838, "seeds": [42, 123, 456, 789, 1011]},
        "15%": {"n_samples": 3336, "n_tumor": 2079, "n_normal": 1257, "seeds": [42, 123, 456, 789, 1011]},
        "20%": {"n_samples": 4448, "n_tumor": 2772, "n_normal": 1676, "seeds": [42, 123, 456, 789, 1011]}
    },
    
    "index_generation": {
        "function": "generate_few_shot_indices(labels, fraction, seed)",
        "steps": [
            "np.random.seed(seed)",
            "n_samples = int(len(labels) * fraction)", 
            "tumor_idx = np.where(labels == 1)[0]",
            "normal_idx = np.where(labels == 0)[0]",
            "n_tumor = int(n_samples * 0.623)",
            "n_normal = n_samples - n_tumor",
            "selected_tumor = np.random.choice(tumor_idx, n_tumor, replace=False)",
            "selected_normal = np.random.choice(normal_idx, n_normal, replace=False)",
            "return np.concatenate([selected_tumor, selected_normal])"
        ]
    },
    
